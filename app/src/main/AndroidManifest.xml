<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swimming.signature">

    <!-- 인터넷 사용 섫정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 주소록 사용 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 전화걸기 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 파일 다운로드 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/-->

    <!-- http 를 사용하기 위한 설정 -->
    <!-- android:usesCleartextTraffic="true" -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/sigature_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sigature_ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- 로그인 -->
        <activity android:name="com.swimming.signature.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인 -->
        <activity android:name="com.swimming.signature.MainActivity">
        </activity>

        <!-- 서브 -->
        <activity android:name="com.swimming.signature.SubActivity">
        </activity>
    </application>

</manifest>